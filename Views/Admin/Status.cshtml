@{
    ViewBag.Title = "Status";
}

<h2>Statistics</h2>



<div class="row">
    <div class="col-md-6" id="piechart" ></div>
        <script type="text/javascript" src="https://www.gstatic.com/charts/loader.js"></script>
        <script type="text/javascript">
    // Load google charts
    google.charts.load('current', { 'packages': ['corechart'] });
    google.charts.setOnLoadCallback(drawChart);

    // Draw the chart and set the chart values
    function drawChart() {
        var data = google.visualization.arrayToDataTable([
                ['Category', 'Sales'],
                ['@ViewBag.cat[0].NomeCategoria', @ViewBag.cat[0].Vendas],
                ['@ViewBag.cat[1].NomeCategoria', @ViewBag.cat[1].Vendas],
                ['@ViewBag.cat[2].NomeCategoria', @ViewBag.cat[2].Vendas],
                ['@ViewBag.cat[3].NomeCategoria', @ViewBag.cat[3].Vendas],
                ['@ViewBag.cat[4].NomeCategoria', @ViewBag.cat[4].Vendas]
        ]);
        console.log(data);
        // Optional; add a title and set the width and height of the chart
        var options = { 'title': 'Categories with most sales', 'width': 550, 'height': 400 };

        // Display the chart inside the <div> element with id="piechart"
        var chart = new google.visualization.PieChart(document.getElementById('piechart'));
        chart.draw(data, options);
    }
</script>

    <div class="col-md-6" id="container"    ></div>
    <script language="JavaScript">
    function drawChart() {
        // Define the chart to be drawn.
        var data = google.visualization.arrayToDataTable([
           ['Product', 'Sales'],
           ['@ViewBag.products[0].DescArtigo', @ViewBag.products[0].Quantidade],
           ['@ViewBag.products[1].DescArtigo', @ViewBag.products[1].Quantidade],
           ['@ViewBag.products[2].DescArtigo', @ViewBag.products[2].Quantidade],
           ['@ViewBag.products[3].DescArtigo', @ViewBag.products[3].Quantidade],
           ['@ViewBag.products[4].DescArtigo', @ViewBag.products[4].Quantidade]
        ]);

        var options = { title: 'Products with most sales' };

        // Instantiate and draw the chart.
        var chart = new google.visualization.BarChart(document.getElementById('container'));
        chart.draw(data, options);
    }
    google.charts.setOnLoadCallback(drawChart);
</script>

</div>
