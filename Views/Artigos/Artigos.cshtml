@{
    ViewBag.Title = "Artigos";
}

<div class="container">
    <div class="row">
@{
    foreach (var artigo in ViewBag.listaArtigos)
    {
        <div class="col">
            <div class="item">
                <img height="250" width="200"src="http://saveabandonedbabies.org/wp-content/uploads/2015/08/default.png" alt="jacket" class="img-item">
                <div class="info">                  
                    <p>@artigo.DescArtigo</p>
                    <p class="description">@artigo.CodArtigo</p>
                    <p>@artigo.Preco€</p>
                </div>
            </div>
        </div>
    }
}
        